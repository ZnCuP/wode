[Unit]
Description=Go-World Auto Backend API
After=network.target postgresql.service

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/goworldauto/backend
Environment=PATH=/usr/bin:/usr/local/bin
Environment=DATABASE_URL=postgresql://goworlduser:your_secure_password@localhost/goworldauto
ExecStart=/usr/bin/python3 -m uvicorn main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target